{
  "name": "lost-in-a-postcard",
  "version": "0.3.0-alpha",
  "description": "Lost in a Postcard. Travel photography portfolio by Domi & Matt.",
  "repository": {
    "type": "git",
    "url": "https://github.com/managervcf/lost-in-a-postcard"
  },
  "author": {
    "name": "Mateusz Pyzowski",
    "email": "managervcf@gmail.com",
    "url": "https://github.com/managervcf"
  },
  "license": "MIT",
  "engines": {
    "node": "13.14.0",
    "npm": "6.14.7"
  },
  "main": "src/dist/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "dev": "npm run build:server && concurrently \"npm run server\" \"npm run client\"",
    "clean:client": "rm -rf src/client/build",
    "clean:server": "rm -rf dist",
    "build": "npm run build:client && npm run build:server",
    "build:client": "npm run clean:client && npm install --prefix src/client && npm run build --prefix src/client",
    "build:server": "npm run clean:server && tsc && npm run copy:images",
    "copy:images": "cp src/test/mocks/*.jpg dist/test/mocks/",
    "client": "npm run start --prefix src/client",
    "server": "nodemon dist/server/index.js",
    "heroku-postbuild": "npm run build",
    "test": "jest --runInBand --watchAll",
    "test:ci": "jest --runInBand --ci"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.7.36",
    "@types/mongoose-paginate-v2": "^1.3.8",
    "@types/mongoose-unique-validator": "^1.0.4",
    "@types/uuid": "^8.3.0",
    "apollo-server-express": "^2.17.0",
    "aws-sdk": "^2.761.0",
    "axios": "^0.20.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.4",
    "mongoose-paginate-v2": "^1.3.9",
    "mongoose-unique-validator": "^2.0.3",
    "typescript": "^4.0.3",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/puppeteer": "^3.0.2",
    "babel-jest": "^24.9.0",
    "concurrently": "^5.3.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.4",
    "puppeteer": "^5.2.1",
    "ts-jest": "^26.4.1"
  }
}
